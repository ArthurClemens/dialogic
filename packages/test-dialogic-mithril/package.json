{
  "name": "tests-dialogic-mithril",
  "private": true,
  "description": "Test Dialogic with Mithril",
  "version": "0.12.6",
  "license": "MIT",
  "scripts": {
    "npm-check-updates": "../../node_modules/npm-check-updates/bin/cli.js -u",
    "dev": "npm-run-all --parallel dev:watch dev:serve",
    "dev:serve": "ENTRY=./src/index.ts ../../node_modules/webpack/bin/webpack.js serve --config ../../scripts/webpack.config.dev.ts",
    "dev:watch": "ENTRY=./src/index.ts ../../node_modules/webpack/bin/webpack.js --watch --config ../../scripts/webpack.config.dev.ts",
    "webpack": "ENTRY=./src/index.ts ../../node_modules/webpack/bin/webpack.js --config ../../scripts/webpack.config.prod.ts",
    "build": "npm run clean && npm run webpack",
    "serve": "http-server -c-1 -p 8080 dist",
    "clean": "rm -rf dist/js/*",
    "test": "npm run test:cypress",
    "test:cypress": "npm run build && start-server-and-test serve 8080 cypress:run",
    "test:cypress:i": "npm run build && npm-run-all --parallel serve cypress:open",
    "cypress:run": "../../node_modules/cypress/bin/cypress run",
    "cypress:open": "../../node_modules/cypress/bin/cypress open",
    "prettier": "prettier --config ../../.prettierrc.json --write \"./{src,scripts}/**/*.{js,jsx,ts,tsx,ejs}\""
  },
  "dependencies": {
    "dialogic": "^0.12.6",
    "dialogic-mithril": "^0.12.6",
    "mithril": "^2.0.4",
    "mithril-hooks": "^0.7.1"
  },
  "devDependencies": {
    "@types/mithril": "^2.0.7",
    "http-server": "^0.12.3",
    "npm-run-all": "^4.1.5",
    "start-server-and-test": "^1.12.1"
  }
}
