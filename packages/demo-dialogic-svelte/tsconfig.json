{
  "include": ["src/**/*", "src/node_modules"],
  "exclude": ["node_modules/*", "__sapper__/*", "public/*"],
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "ESNEXT",
    "strict": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "types": ["@pyoner/svelte-types"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  }
}
