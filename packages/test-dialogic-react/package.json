{
  "name": "tests-dialogic-react",
  "private": true,
  "description": "Test Dialogic with React",
  "version": "0.9.0",
  "license": "MIT",
  "scripts": {
    "npm-check-updates": "../../node_modules/npm-check-updates/bin/ncu.js -u",
    "dev": "npm-run-all --parallel dev:watch dev:serve",
    "dev:serve": "ENTRY=./src/index.tsx ../../node_modules/webpack-dev-server/bin/webpack-dev-server.js --config ../../scripts/webpack.config.dev.js --disableHostCheck true --port 3000 --host 0.0.0.0",
    "dev:watch": "ENTRY=./src/index.tsx ../../node_modules/webpack/bin/webpack.js --watch --config ../../scripts/webpack.config.dev.js",
    "webpack": "ENTRY=./src/index.tsx ../../node_modules/webpack/bin/webpack.js --config ../../scripts/webpack.config.prod.js",
    "build": "npm run clean && npm run webpack",
    "serve": "http-server -c-1 -p 8080 dist",
    "clean": "rm -rf dist/js/*",
    "test": "npm run test:cypress",
    "test:cypress": "npm run build && start-server-and-test serve 8080 cypress:run",
    "test:cypress:i": "npm run build && npm-run-all --parallel serve cypress:open",
    "cypress:run": "../../node_modules/cypress/bin/cypress run",
    "cypress:open": "../../node_modules/cypress/bin/cypress open",
    "prettier": "prettier --config ../../.prettierrc.json --write \"./{src,scripts}/**/*.{js,jsx,ts,tsx,ejs}\""
  },
  "dependencies": {
    "dialogic": "^0.9.0",
    "dialogic-react": "^0.9.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "5.2.0"
  },
  "devDependencies": {
    "@types/react": "^16.9.46",
    "@types/react-dom": "^16.9.8",
    "@types/react-router-dom": "^5.1.5",
    "http-server": "^0.12.3",
    "npm-run-all": "^4.1.5",
    "start-server-and-test": "^1.11.3"
  }
}
